@page
@model SimpleChat.Pages.Account.SignInModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
</head>
<body>
    <form asp-page="Account/SingIn" method="post">
        <div class="validation" asp-validation-summary="All" />
        <div>
            <div class="form-group">
                <label asp-for="@Model.Email">Введите e-mail</label>
                <input type="text" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password">Введите пароль</label>
                <input asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn" />
            </div>
        </div>
    </form>
</body>
</html>
